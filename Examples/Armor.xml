  <ThingDef ParentName="ApparelArmorPowerBase">
    <defName>PurgeArmour</defName>
    <label>Purge Armor</label>
    <description>A suit of extremely heavy powered armour. An insane investment, this set of power armour is so armoured, that it has the capabilities of stopping tank rounds. Allows the wearer to weild heavy items, but increases physic sensitivity immensely.</description>
    <apparel>
      <tags>
        <li>SpacerMilitary</li>
        <li>RoyalCombatGear</li>
      </tags>
    </apparel>
    <tickerType>Normal</tickerType>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_PurgeFlamer</defaultProjectile>
        <warmupTime>2.5</warmupTime>
        <range>17.9</range>
        <burstShotCount>100</burstShotCount>
        <ticksBetweenBurstShots>1</ticksBetweenBurstShots>
        <soundCast>FireBurst</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <accuracyTouch>0.15</accuracyTouch>
        <accuracyShort>0.25</accuracyShort>
        <accuracyMedium>0.25</accuracyMedium>
        <accuracyLong>0.18</accuracyLong>
        <defaultCooldownTime>2.5</defaultCooldownTime>
      </li>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_PurgeRailgun</defaultProjectile>
        <warmupTime>3.0</warmupTime>
        <range>999</range>
        <soundCast>PurgeRailgunShot</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>15</muzzleFlashScale>
        <accuracyTouch>0.4</accuracyTouch>
        <accuracyShort>0.9</accuracyShort>
        <accuracyMedium>1</accuracyMedium>
        <accuracyLong>1</accuracyLong>
        <defaultCooldownTime>2.5</defaultCooldownTime>
      </li>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_PurgeRifle</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>35.9</range>
        <ticksBetweenBurstShots>15</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>LaserShot</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <accuracyTouch>0.50</accuracyTouch>
        <accuracyShort>0.60</accuracyShort>
        <accuracyMedium>0.80</accuracyMedium>
        <accuracyLong>0.85</accuracyLong>
        <defaultCooldownTime>2.15</defaultCooldownTime>
      </li>
    </verbs>
    <comps>
      <li Class="MCVF.Comps.CompProperties_VerbGiver" />
    </comps>
  </ThingDef>
